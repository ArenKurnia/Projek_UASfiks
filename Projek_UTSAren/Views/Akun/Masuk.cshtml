@model User

@{ Layout = "_LayoutAkun"; }
@{ if (!string.IsNullOrEmpty(ViewBag.pesan))
    {
<script>
                alert("@ViewBag.pesan");
</script>
 } }

<div class="card-header"><h3 class="text-center font-weight-light my-4">Login</h3></div>
<div class="card-body">
    <form asp-action="Masuk">
        <div class="form-floating mb-3">
            <input class="form-control" asp-for="Username" placeholder="name@example.com" />
            <label for="inputUsername">Username</label>
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <input class="form-control" type="password" asp-for="Password" placeholder="Password" />
            <label for="inputPassword">Password</label>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
            <input type="submit" class="btn btn-primary" value="Login" />
        </div>
    </form>
</div>
<div class="card-footer text-center py-3">
    <div class="small">Belum Punya Akun? <a asp-action="Daftar"> Register</a></div>
</div>
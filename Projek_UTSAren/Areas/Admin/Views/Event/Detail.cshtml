            @Html.DisplayNameFor(model => model.Id_event)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id_event)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id_angkatan)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id_angkatan)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nama_event)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nama_event)
        </dd>
        <dt class="col-sm-2">

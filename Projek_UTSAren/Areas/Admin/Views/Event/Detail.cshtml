<br />
<br />
<div>
    <a class="btn btn-dark" style="color:white" asp-action="Update" asp-route-id="@Model.Id_event">Edit</a>
    <a class="btn btn-dark" style="color:white" asp-action="Index">Kembali</a>
    <a class="btn btn-dark" id="tb-datatable" style="color:white">Print</a>
</div>
@section Scripts {
<script>$(document).ready(function () {
            $('#tb-datatable').DataTable(
                {
                    dom: 'Bfrtip',
                    buttons: [
                        'print',
                    ]
                }
            );
        });</script>
}
